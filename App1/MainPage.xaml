<Page


    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MinWidth="800" MinHeight="600" >
    

    <Grid Margin="25,0,0,0" Background="{ThemeResource AppBarItemBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Margin="10" TextWrapping="Wrap" Text="Modbus App" VerticalAlignment="Top" FontSize="36" >
        </TextBlock>


        <Grid Grid.Row="1"  HorizontalAlignment="Left" Width="Auto" Height="Auto"  Grid.Column="0"  Grid.ColumnSpan="1"  Margin="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Front Panel IP" HorizontalAlignment="Left" Margin="10"/>
            <TextBlock Grid.Row="1" Text="Port"           HorizontalAlignment="Left" Margin="10"/>

            <TextBox x:Name="ipBox" Grid.Column="1" Grid.Row="0" Width="120" TextWrapping="NoWrap" TextAlignment="Center" Margin="10,10,0,0" TextChanged="IpBox_TextChanged" AcceptsReturn="True"/>
            <TextBox x:Name="portBox" Grid.Column="1" Grid.Row="1" Width="120" TextWrapping="Wrap" TextAlignment="Center" Margin="10,10,0,0" TextChanged="PortBox_TextChanged"/>

            <Button Grid.Column="2" Margin="10" Content="Set Front Panel Addres" HorizontalAlignment="Center" RenderTransformOrigin="0.38,0.391"  Click="Button_Click" />

            <Grid x:Name="noteGrid"  Grid.Row="1" Grid.RowSpan="1" Margin="10" Grid.Column="2"  Background="DarkSalmon">
                <RelativePanel/>
                <TextBlock x:Name="connStatusBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Height="auto" Margin="10"  TextWrapping="NoWrap" Text="Not Connected" FocusVisualPrimaryBrush="#FFB52929"/>
            </Grid>
            <TextBlock Margin="10"  Grid.Row="3" TextWrapping="Wrap" Text="Program Frequency" />
            <TextBlock Margin="10"  Grid.Row="4" TextWrapping="Wrap" Text="Program Voltage AC"/>
            <TextBlock Margin="10"  Grid.Row="5" TextWrapping="Wrap" Text="Program Voltage DC"/>
            <TextBlock Margin="10"  Grid.Row="6" TextWrapping="Wrap" Text="Power Limit"       />
            <TextBlock Margin="10"  Grid.Row="7" TextWrapping="Wrap" Text="Current Limit ABC" />
            <TextBlock Margin="10"  Grid.Row="8" TextWrapping="Wrap" Text="KVA Limit"         />

            <TextBox x:Name="ProgFreq"   Margin="10"  Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" />
            <TextBox x:Name="ProgVoltAC" Margin="10"  Grid.Column="1" Grid.Row="4" TextWrapping="Wrap"/>
            <TextBox x:Name="ProgVoltDC" Margin="10"  Grid.Column="1" Grid.Row="5" TextWrapping="Wrap"/>
            <TextBox x:Name="PowLim"     Margin="10"  Grid.Column="1" Grid.Row="6" TextWrapping="Wrap"/>
            <TextBox x:Name="CuLimABC"   Margin="10"  Grid.Column="1" Grid.Row="7" TextWrapping="Wrap"/>
            <TextBox x:Name="KVALim"     Margin="10"  Grid.Column="1" Grid.Row="8" TextWrapping="Wrap"/>

            <ToggleSwitch x:Name="OutEnSwitch" OnContent="Enabled" OffContent="Disabled" Grid.Column="2" Header="Output " Margin="0" Grid.Row="2" Toggled="OutEnSwitch_Toggled"/>

        </Grid>

        <controls:DataGrid Grid.Row="1"
                           Grid.Column="1"                           
                           x:Name="dataGrid1" 
                           Height="auto"
                           Width="auto"
                           HorizontalAlignment="Left"
                           Margin="10" 
                           AutoGenerateColumns="False"
                           VerticalScrollBarVisibility="Auto"
                           
                           
        >
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Var Name"
                                             Binding="{Binding ZeroColumn}"/>
                <controls:DataGridTextColumn Header="Value"
                                             Binding="{Binding OneColumn}"/>
                <controls:DataGridTextColumn Header="Unit"
                                             Binding="{Binding TwoColumn}"/>
                <controls:DataGridTextColumn Header="No set"
                                             Binding="{Binding ThreeColumn}"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>


    </Grid>
</Page>
<!--ItemsSource="{x:Bind local:MainPage.SomeDisplay}"-->